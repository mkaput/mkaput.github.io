---
interface Props {
  date: Date;
  class?: string;
}

const { date, class: className } = Astro.props;
const formatter = new Intl.DateTimeFormat("en-US", {
  month: "short",
  day: "2-digit",
  year: "numeric",
  timeZone: "UTC",
});
---

<time class={className} datetime={date.toISOString()}>
  {formatter.format(date)}
</time>
